--- 
import {Link, Span} from "../../Tag"
import {HookPlug} from "../../Container"
import {flattenClasses} from "../../Style"
import structure from "@globalStructure/person.json"
import style from "@globalStyle/person.json"


const props = Astro.props
const ext = true 
const h = props.h ? props.h : 48, w = props.w ? props.w : 48
const classes = flattenClasses(["person","title"],structure,style,props)
---

<HookPlug class={props.class}>
    <Span class={classes.person} slot="hook">{props.name}<slot name="hook"/></Span>
    <Span class={classes.title} slot="plug">{props.title}<slot/></Span>
</HookPlug>



