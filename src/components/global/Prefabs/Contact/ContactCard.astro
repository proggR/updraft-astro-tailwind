--- 
import { Container } from "../../Container"
import { Email, Span } from "../../Tag"
import { flattenClasses } from "../../Style"
import { Img } from "../../Media"
import { PersonTitle } from "./"
import structure from "@globalStructure/socialsig.json"
import style from "@globalStyle/socialsig.json"


const props = Astro.props
const h = props.h ? props.h : 48 , w = props.w ? props.w : 48

const dimensions = {
    width:w,
    height:h
}

const classes = flattenClasses(["img"],structure,style,props)
---

<Container class={classes.class}>
    <Img
        src={props.img}
        class={classes.img}
        {...dimensions}
    />
    <Container>
        <PersonTitle name={props.name}>
            <ul>            
                <li><Span>{props.title}</Span></li>
                <li><Email email={props.email}/></li>   
                <li><Span>{props.phone}</Span></li>
            </ul>
        </PersonTitle>   
    </Container>
</Container>    


