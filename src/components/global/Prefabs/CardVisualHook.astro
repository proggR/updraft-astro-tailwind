---
const props = Astro.props
import { Container, HookPlug } from "../Container"
import {  flattenClasses } from "../Style"
import structure from "@globalStructure/visualcard.json"
import style from "@globalStyle/visualcard.json"

const atts = props.atts
const classes = flattenClasses(["plug","above","below"],structure,style,props)
---
<Container class={classes.class} style={`background-image:url("${props.img}")`}>
    <Container class={classes.above}></Container>
        <HookPlug class={classes.plug} {...atts}>
            <slot name="super"  />
            <slot name="hook" slot="hook" />
            <slot name="sub" />
            <slot name="plug" slot="plug" />
        </HookPlug>    
        <slot name="footer" />
    <Container class={classes.below}></Container>
</Container>