--- 
import { Footer, LayoutLanding } from "@globals"
import { Link, Img, Svg } from "@globals"
import { Container } from "@globals"
import { Form, FieldText } from "@globals"


import headerImg from '../assets/img/header.png'
import animatedImg from '../assets/svg/macbook.svg'
import atts from '../styles/landing'

const formAtts = {
    "atts":{
        label:atts.main.form.body.label,
        input:atts.main.form.body.input
    }
}
--- 
   
<LayoutLanding title="Hello World, &hearts; Affordable Audience">
    <Container {...atts.wrap}>
        <!--Nav-->
        <Container {...atts.nav}>
            <Container {...atts.nav.flex}>
                <Link href="#" {...atts.nav.logo}>
                    Affordable&nbsp;<span {...atts.nav.logo.flair}>Audience</span>
                </Link>
                <Container {...atts.nav.socials}>
                    <Link href="https://twitter.com/intent/tweet?url=#" 
                    {...atts.nav.socials.link}>
                        <Svg data="M30.063 7.313c-.813 1.125-1.75 2.125-2.875 2.938v.75c0 1.563-.188 3.125-.688 4.625a15.088 15.088 0 0 1-2.063 4.438c-.875 1.438-2 2.688-3.25 3.813a15.015 15.015 0 0 1-4.625 2.563c-1.813.688-3.75 1-5.75 1-3.25 0-6.188-.875-8.875-2.625.438.063.875.125 1.375.125 2.688 0 5.063-.875 7.188-2.5-1.25 0-2.375-.375-3.375-1.125s-1.688-1.688-2.063-2.875c.438.063.813.125 1.125.125.5 0 1-.063 1.5-.25-1.313-.25-2.438-.938-3.313-1.938a5.673 5.673 0 0 1-1.313-3.688v-.063c.813.438 1.688.688 2.625.688a5.228 5.228 0 0 1-1.875-2c-.5-.875-.688-1.813-.688-2.75 0-1.063.25-2.063.75-2.938 1.438 1.75 3.188 3.188 5.25 4.25s4.313 1.688 6.688 1.813a5.579 5.579 0 0 1 1.5-5.438c1.125-1.125 2.5-1.688 4.125-1.688s3.063.625 4.188 1.813a11.48 11.48 0 0 0 3.688-1.375c-.438 1.375-1.313 2.438-2.563 3.188 1.125-.125 2.188-.438 3.313-.875z" {...atts.nav.socials.link.icon}/>
                    </Link>
                    <Link href="https://www.facebook.com/sharer/sharer.php?u=#"
                    {...atts.nav.socials.link}>
                        <Svg data="M19 6h5V0h-5c-3.86 0-7 3.14-7 7v3H8v6h4v16h6V16h5l1-6h-6V7c0-.542.458-1 1-1z" {...atts.nav.socials.link.icon} />
                    </Link>
                </Container>
            </Container>
        </Container>

        <!--Main-->
        <Container {...atts.main}>
            <!--Left Col-->
            <Container {...atts.main.wrap}>
                <h1 {...atts.main.wrap.h1}>
                    Hello World
                    <span {...atts.main.wrap.h1.flair}>
                    &hearts;
                    </span><br/>             
                    We <em class="underline">are</em> online.
                </h1>
                <p {...atts.main.wrap.p}>
                    Our business is helping small teams keep up and grow online. We specialize in fast sites, webapps & services built with best in class tooling, and <em class="underline">always</em> put SEO first.
                    <br/><br/>
                    Small business/org with digital needs?<br/>We can help.
                </p>

                <Form {...atts.main.form}>
                    <Container {...atts.main.form.body}>
                        <FieldText name="emailaddress"
                            placeholder="vip@yoursmallbusiness.com"
                            label="Let's Chat" 
                            {...formAtts}
                            >
                            <p class="mb-6">We'll reach out with some initial questions and more information covering what we can offer.</p>
                        </FieldText>
                        
                    </Container>
                    <Container  {...atts.main.form.footer}>
                        <button
                            type="button"
                            {...atts.main.form.footer.submit}>
                            Inbox Us
                        </button>
                        <Link url="/agency"
                        {...atts.main.form.footer.more}>
                        Agency
                        </Link>
                    </Container>
                </Form>            
            </Container>

            <!--Right Col-->
            <Container {...atts.right}>
                <Img src={animatedImg} {...atts.right.img} />
            </Container>

            <!--Footer-->
            <Container {...atts.footer}>
                <Link href="https://deit.ca" 
                    external={true}
                    {...atts.footer.deit}>
                    &copy; Affordable Audience, c/o DEIT 2023
                </Link>
                - 
                <Link href="https://www.tailwindtoolbox.com" {...atts.footer.tailwind}>TailwindToolbox.com</Link>
            </Container>
        </Container>
    </Container>
</LayoutLanding>
